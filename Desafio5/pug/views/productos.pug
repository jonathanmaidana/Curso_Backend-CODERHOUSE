html 
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body
        div(class="container d-flex justify-content-center flex-column w-50 bg-light")
            h1(class="text-center p-5") Vista de Productos
            if (listaProductos)
                table(class="table")
                    thead
                        tr(class="fs-6 fw-bold")
                            th(scope="col") Nombre
                            th(scope="col") Precio
                            th(scope="col") Imagen
                    tbody
                        each val in listaProductos
                            tr
                                td(class="pb-2")= val.title
                                td(class="pb-2")= `$${val.price}`
                                td(class="pb-2 d-flex justify-content-center")
                                    img(style={width: "30"} src=val.thumbnail)
            else 
                h1(class="text-center p-5 fs-3") No se encontraron productos

    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
